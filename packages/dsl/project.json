{
  "name": "dsl",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/dsl/src",
  "projectType": "library",
  "targets": {
    "publish": {
      "command": "node tools/scripts/publish.mjs dsl {args.ver} {args.tag}",
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/dsl/**/*.ts"]
      },
      "configurations": {
        "fix": {
          "fix": true
        }
      }
    },
    "typecheck": {
      "command": "tsc -p packages/dsl/tsconfig.typecheck.json"
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{workspaceRoot}/coverage/packages/dsl"],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../coverage/packages/dsl"
      }
    }
  },
  "tags": []
}
