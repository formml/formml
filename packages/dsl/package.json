{
  "name": "@formml/dsl",
  "description": "Please enter a brief description here",
  "version": "0.0.0",
  "type": "module",
  "files": [
    "out",
    "src"
  ],
  "scripts": {
    "build": "rimraf dist/ && pnpm run build:tsc",
    "build:tsc": "tsc -p ./tsconfig.lib.json",
    "dev": "rimraf dist/ && pnpm run build:tsc --watch",
    "lint": "eslint . --ignore-path .gitignore",
    "lint:fix": "pnpm run lint --fix",
    "lint:type": "tsc",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "langium:generate": "langium generate",
    "langium:watch": "langium generate --watch"
  },
  "dependencies": {
    "langium": "^2.1.3",
    "vscode-languageclient": "~9.0.1",
    "vscode-languageserver": "~9.0.1"
  },
  "devDependencies": {
    "@formml/typescript-config": "workspace:*",
    "eslint-config-formml": "workspace:*"
  },
  "displayName": "formml",
  "engines": {
    "vscode": "^1.67.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "formml",
        "aliases": [
          "FormML",
          "formml"
        ],
        "extensions": [
          ".formml"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "formml",
        "scopeName": "source.formml",
        "path": "./syntaxes/formml.tmLanguage.json"
      }
    ]
  },
  "activationEvents": [
    "onLanguage:formml"
  ],
  "exports": "./dist/language/index.js"
}
