{
  "name": "@formml/dsl",
  "version": "0.0.1",
  "type": "module",
  "description": "The parser of formml schema language",
  "keywords": [
    "formml",
    "form",
    "parser"
  ],
  "homepage": "https://github.com/formml/formml/tree/main/packages/dsl",
  "repository": "https://github.com/formml/formml/tree/main/packages/dsl",
  "bugs": "https://github.com/formml/formml/issues",
  "author": "Jindong Zhang <jindong.zhannng@gmail.com>",
  "license": "MIT",
  "files": [
    "dist",
    "src",
    "!src/**/__test__",
    "builtins",
    "interfaces"
  ],
  "scripts": {
    "build": "rimraf dist/ && pnpm run build:vite",
    "build:vite": "vite build",
    "dev": "rimraf dist/ && pnpm run build:vite --watch",
    "lint": "eslint . --ignore-path .gitignore",
    "lint:fix": "pnpm run lint --fix",
    "lint:type": "tsc",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "langium:generate": "langium generate",
    "langium:watch": "langium generate --watch",
    "gen:interfaces": "vite-node ./scripts/generateInterfaces.ts && tsc -p tsconfig.interfaces.json"
  },
  "dependencies": {
    "langium": "^3.0.0"
  },
  "devDependencies": {
    "@formml/typescript-config": "workspace:*",
    "eslint-config-formml": "workspace:*",
    "vscode-languageserver-types": "^3.17.5"
  },
  "exports": {
    ".": "./dist/index.js",
    "./builtins/*.formml": "./builtins/*.formml",
    "./interfaces/*.js": "./interfaces/*.js"
  }
}
