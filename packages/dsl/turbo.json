{
  "extends": ["//"],
  "pipeline": {
    "test": {
      "dependsOn": ["langium:generate"]
    },
    "build": {
      "dependsOn": ["^build", "langium:generate"]
    },
    "langium:generate": {
      "outputs": ["src/language/generated/**", "syntaxes/**"]
    },
    "langium:watch": {
      "cache": false,
      "persistent": true
    }
  }
}
