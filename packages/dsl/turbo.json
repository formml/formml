{
  "extends": ["//"],
  "pipeline": {
    "test": {
      "dependsOn": ["langium:generate"]
    },
    "build": {
      "dependsOn": ["^build", "langium:generate", "gen:interfaces"],
      "outputs": ["dist/**"]
    },
    "langium:generate": {
      "outputs": ["src/language/generated/**", "syntaxes/**"]
    },
    "langium:watch": {
      "cache": false,
      "persistent": true
    },
    "gen:interfaces": {
      "dependsOn": ["langium:generate"],
      "inputs": ["builtins/**", "scripts/generateInterfaces.ts"],
      "outputs": ["interfaces/**"]
    }
  }
}
