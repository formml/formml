{
  "extends": "@formml/typescript-config/base.json",
  "compilerOptions": {
    "allowJs": true,
    "noEmit": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": ["vitest/globals", "vitest/importMeta", "vite/client", "node"]
  },
  "include": [
    "**/*.ts",
    "**/*.cts",
    "**/*.mts",
    "**/*.js",
    "**/*.cjs",
    "**/*.mjs"
  ]
}
