{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "release": {
      "dependsOn": ["build", "test", "lint"]
    },
    "test": {
      "inputs": [
        "**/*.formml",
        "src/**/*.tsx",
        "src/**/*.ts",
        "*-test/**/*.ts",
        "*-test/**/*.tsx"
      ],
      "dependsOn": ["^build"]
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "lint:fix": {
      "dependsOn": ["^build"]
    },
    "lint:type": {
      "dependsOn": ["^build"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "preview": {
      "cache": false,
      "persistent": true
    }
  }
}
